{{ if eq .chezmoi.os "darwin" "linux" -}}
#!/bin/bash

set -euo pipefail

# Reset
NC='\033[0m'
# Colors
Red='\033[0;31m'
Green='\033[0;32m'

echo "=#= Checking if Homebrew is installed.."
if [ ! -x "$(command -v brew)" ]; then
    echo -e "${Red}Homebrew does not appear to be installed. Run the following command to have it installed:${NC}"
    echo '/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"'
    exit 1
fi

echo -e "${Green}Homebrew appears to be installed!${NC}"

# Disable hints
export HOMEBREW_NO_ENV_HINTS=1

echo "=#= Installing Common brews"
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.common_brews -}}
brew {{ . | quote }}
{{ end -}}
EOF

{{ if eq .osid "darwin" -}}
echo "=#= Installing Mac specific brews"
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
{{ end -}}

{{ if eq .chezmoi.os "linux" -}}
echo "=#= Installing Linux specific brews"
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.linux.brews -}}
brew {{ . | quote }}
{{ end -}}
EOF
{{ end -}}

{{ end -}}
